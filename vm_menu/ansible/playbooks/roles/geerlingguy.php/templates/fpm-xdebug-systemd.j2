[Unit]
Description=The PHP {{ php_version }} FastCGI Process Manager
Documentation=man:php-fpm{{ php_version }}(8)
After=network.target

[Service]
Type=notify
ExecStart=/usr/sbin/php-fpm{{ php_version }} --nodaemonize --fpm-config /etc/php/{{ php_version }}/fpm/php-fpm-xdebug.conf -d zend_extension=xdebug.so
ExecReload=/bin/kill -USR2 $MAINPID
Restart=on-failure

[Install]
WantedBy=multi-user.target
