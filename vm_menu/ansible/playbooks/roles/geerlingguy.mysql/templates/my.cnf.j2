{{ ansible_managed | comment }}

[client]
port = {{ mysql_port }}
socket = {{ mysql_socket }}
default-character-set = {{ mysql_character_set_server }}

[mysqld]
port = {{ mysql_port }}
bind-address = {{ mysql_bind_address }}
{% if '8.0.' in mysql_cli_version.stdout %}
mysqlx_bind_address = {{ mysql_mysqlx_bind_address }}
{% endif %}
datadir = {{ mysql_datadir }}
socket = {{ mysql_socket }}
pid-file = {{ mysql_pid_file }}
{% if mysql_skip_name_resolve %}
skip-name-resolve
{% endif %}
sql_mode = {{ mysql_sql_mode }}
{% if mysql_skip_networking %}
skip_networking
{% endif %}

# Logging configuration.
{% if mysql_log_error == 'syslog' or mysql_log == 'syslog' %}
syslog
syslog-tag = {{ mysql_syslog_tag }}
{% else %}
{% if mysql_log %}
log = {{ mysql_log }}
{% endif %}
log-error = {{ mysql_log_error }}
{% endif %}

{% if mysql_slow_query_log_enabled %}
# Slow query log configuration.
slow_query_log = 1
slow_query_log_file = {{ mysql_slow_query_log_file }}
long_query_time = {{ mysql_slow_query_time }}
{% endif %}


{% if mysql_disable_log_bin and not mysql_replication_master %}
# Disable binlog to save disk space
disable-log-bin
{% endif %}

{% if mysql_replication_master %}
# Replication
server-id = {{ mysql_server_id }}

{% if mysql_replication_role == 'master' %}
log_bin = mysql-bin
log-bin-index = mysql-bin.index
expire_logs_days = {{ mysql_expire_logs_days }}
max_binlog_size = {{ mysql_max_binlog_size }}
binlog_format = {{mysql_binlog_format}}

{% for db in mysql_databases %}
{% if db.replicate|default(1) %}
binlog_do_db = {{ db.name }}
{% else %}
binlog_ignore_db = {{ db.name }}
{% endif %}
{% endfor %}
{% endif %}

{% if mysql_replication_role == 'slave' %}
read_only
relay-log = relay-bin
relay-log-index = relay-bin.index
{% endif %}
{% endif %}

# Disabling symbolic-links is recommended to prevent assorted security risks
{% if '8.0.' not in mysql_cli_version.stdout %}
symbolic-links = 0
{% endif %}

# User is ignored when systemd is used (fedora >= 15).
user = mysql

# http://dev.mysql.com/doc/refman/5.5/en/performance-schema.html
performance_schema = {{ mysql_performance_schema }}

# Memory settings.
key_buffer_size = {{ mysql_key_buffer_size | default(([ansible_memtotal_mb // 16, 16] | min ~ 'M')) }}
max_allowed_packet = {{ mysql_max_allowed_packet | default(([ansible_memtotal_mb // 64, 64] | min ~ 'M')) }}
table_open_cache = {{ mysql_table_open_cache | default(mysql_config.table_open_cache) }}
sort_buffer_size = {{ mysql_sort_buffer_size | default(mysql_config.sort_buffer_size | string + 'M') }}
join_buffer_size = {{ mysql_join_buffer_size | default(mysql_config.join_buffer_size | string + 'M') }}
read_buffer_size = {{ mysql_read_buffer_size | default(([ansible_memtotal_mb // 512, 16] | min ~ 'M')) }}
read_rnd_buffer_size = {{ mysql_read_rnd_buffer_size | default(([ansible_memtotal_mb // 512, 16] | min ~ 'M')) }}
myisam_sort_buffer_size = {{ mysql_myisam_sort_buffer_size | default(([ansible_memtotal_mb // 512, 4] | min ~ 'M')) }}
thread_cache_size = {{ mysql_thread_cache_size | default(mysql_config.thread_cache_size) }}
{% if '8.0.' not in mysql_cli_version.stdout %}
query_cache_type = {{ mysql_query_cache_type | default(1) }}
query_cache_size = {{ mysql_query_cache_size | default(mysql_config.query_cache_size | string + 'M') }}
query_cache_limit = {{ mysql_query_cache_limit | default(mysql_config.query_cache_limit | string + 'M') }}
{% endif %}
max_connections = {{ mysql_max_connections | default([ansible_memtotal_mb // 20, 100] | min) }}
tmp_table_size = {{ mysql_tmp_table_size | default(mysql_config.tmp_table_size | string + 'M') }}
max_heap_table_size = {{ mysql_max_heap_table_size | default(mysql_config.max_heap_table_size | string + 'M') }}
group_concat_max_len = {{ mysql_group_concat_max_len }}

# Other settings.
{% if mysql_wait_timeout %}
wait_timeout = {{ mysql_wait_timeout }}
{% endif %}
lower_case_table_names = {{ mysql_lower_case_table_names }}
transaction_isolation = {{ mysql_transaction_isolation }}
{% if '5.7.' in mysql_cli_version.stdout or '8.0.' in mysql_cli_version.stdout %}
log_timestamps = {{ mysql_log_timestamps }}
{% endif %}
{% if mysql_event_scheduler_state is defined and mysql_event_scheduler_state %}
event_scheduler = {{ mysql_event_scheduler_state }}
{% else %}
event_scheduler = OFF
{% endif %}
{% if mysql_low_priority_updates is defined and mysql_low_priority_updates %}
low_priority_updates
{% endif %}


# collations
character_set_server = {{ mysql_character_set_server }}
collation_server = {{ mysql_collation_server }}
init_connect = {{ mysql_init_connect }}

# thread handling
{% if mysql_thread_handling is defined and mysql_thread_handling %}
thread_handling = {{ mysql_thread_handling | default('one-thread-per-connection') }}
{% endif %}
{% if mysql_thread_pool_size is defined and mysql_thread_pool_size %}
thread_pool_size = {{ mysql_thread_pool_size }}
{% endif %}

# InnoDB settings.
innodb_file_per_table = {{ mysql_innodb_file_per_table }}
{% set default_buffer_pool_size = (ansible_memtotal_mb <= 2048) | ternary((ansible_memtotal_mb * 0.4) | int, (ansible_memtotal_mb * 0.7) | int) %}
innodb_buffer_pool_size = {{ mysql_innodb_buffer_pool_size | default(mysql_config.innodb_buffer_pool_size | string + 'M') }}

{% if '5.7.' in mysql_cli_version.stdout or '8.0.' in mysql_cli_version.stdout or '5.5.' in mysql_cli_version.stdout %}
{% set calculated_instances = [(default_buffer_pool_size // 1024) | round | int, 64, ansible_processor_vcpus, 1] | sort %}
innodb_buffer_pool_instances = {{ mysql_innodb_buffer_pool_instances | default(calculated_instances[1]) }}
{% endif %}

{% if '8.0.' not in mysql_cli_version.stdout %}
{% set buffer_pool_size = mysql_innodb_buffer_pool_size | default(default_buffer_pool_size, true) %}
{% set log_file_size = (buffer_pool_size | replace('M', '') | int // 4) %}
innodb_log_file_size = {{ log_file_size }}M
{% endif %}

{% if '8.0.' in mysql_cli_version.stdout %}
{% if mysql_innodb_redo_log_capacity is defined and mysql_innodb_redo_log_capacity %}
{% set mysql_innodb_redo_log_capacity_numeric = (mysql_innodb_redo_log_capacity | replace("M", "")) | int %}
innodb_redo_log_capacity = {{ mysql_innodb_redo_log_capacity }}
{% endif %}
{% endif %}
innodb_log_buffer_size = {{ mysql_innodb_log_buffer_size | default(([ansible_memtotal_mb // 64, 64] | min ~ 'M')) }}
innodb_flush_log_at_trx_commit = {{ mysql_innodb_flush_log_at_trx_commit }}
innodb_flush_method = {{ mysql_innodb_flush_method }}
innodb_lock_wait_timeout = {{ mysql_innodb_lock_wait_timeout }}
innodb_strict_mode = {{ mysql_innodb_strict_mode }}

{% if mysql_extra_config is defined %}
{{ mysql_extra_config }}
{% endif %}

[mysqldump]
quick
max_allowed_packet = {{ mysql_mysqldump_max_allowed_packet }}

[mysqld_safe]
pid-file = {{ mysql_pid_file }}

{% if mysql_config_include_files | length %}
# * IMPORTANT: Additional settings that can override those from this file!
#   The files must end with '.cnf', otherwise they'll be ignored.
#
!includedir {{ mysql_config_include_dir }}
{% endif %}
