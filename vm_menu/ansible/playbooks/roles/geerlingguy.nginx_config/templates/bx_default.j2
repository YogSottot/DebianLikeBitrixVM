# {{ ansible_managed }} "{{ item.server_name.split(' ')[0] }}"
{% block server_redirect %}
{% if item.server_name_redirect is defined %}
server {
    listen       {{ item.listen | default('80') }};
    listen       {{ item.listen | default('443') }} ssl;
{% if nginx_listen_ipv6 %}
    listen       [::]:{{item.listen | default('80') }};
    listen       [::]:{{item.listen | default('443') }} ssl;
{% endif %}

    # Enable SSL connection
    include	bx/conf/ssl.conf;

    server_name  {{ item.server_name_redirect }};
    return       301 $scheme://{{ item.server_name.split(' ')[0] }}$request_uri;

    # custom options for sites; doesn't changes on update
    include bx/site_settings/default/*.conf;
}
{% endif %}
{% endblock %}

server {
    listen {{ item.listen | default('80') }} default_server;
{% if nginx_listen_ipv6 %}
    listen [::]:{{item.listen | default('80') }} default_server;
{% endif %}

{% if item.server_name is defined %}
    server_name {{ item.server_name }};
{% endif %}

{% if item.access_log is defined %}
    access_log {{ item.access_log | default('/var/log/nginx/{{ item.server_name.split(' ')[0]}}.log main') }};
{% endif %}
{% if item.error_log is defined %}
    error_log {{ item.error_log | default('/var/log/nginx/{{ item.server_name.split(' ')[0]}}.log warn') }};
{% endif %}

    server_name_in_redirect	off;

{% if item.httpd is true %}
    proxy_set_header    X-Forwarded-For    $proxy_add_x_forwarded_for;
    proxy_set_header    X-Real-IP          $remote_addr;
    proxy_set_header    Host               $host:80;
    proxy_set_header    X-Forwarded-Host   $host;
    proxy_set_header    X-Forwarded-Scheme $scheme;
    proxy_set_header    X-Forwarded-Proto  $scheme;
    proxy_set_header    X-Forwarded-Port   $server_port;
    
    # This rule removes the port number from HTTP/HTTPS redirects.
    proxy_redirect ~^(http://[^:]+):\d+(/.+)$ $1$2;
    proxy_redirect ~^(https://[^:]+):\d+(/.+)$ $1$2;

    set $proxyserver	"http://127.0.0.1:8888";

    proxy_ignore_client_abort off;
{% else %}
    fastcgi_ignore_client_abort off;

    set $php_sock  unix:/run/php/php-fpm{{ item.php_fpm_version | default('')}}.sock;
{% endif %}

{% if item.root is defined %}
    set $docroot {{ item.root }};
    root {{ item.root }};
{% else %}
    set $docroot		"/home/bitrix/ext_www/{{ item.server_name.split(' ')[0]}}";
    root /home/bitrix/ext_www/{{ item.server_name.split(' ')[0]}};
{% endif %}
    index {{ item.index | default('index.php index.html index.htm') }};

    # Redirect to ssl if need
    if ($redirect_https) { return 301 https://$host$request_uri; }
{% if item.return is defined %}
    return {{ item.return }};
{% endif %}


{% if item.extra_parameters is defined %}
    {{ item.extra_parameters|indent(4) }}
{% endif %}

    # custom options for sites; doesn't changes on update
    include bx/site_settings/default/*.conf;

{% if item.httpd is true %}
    # Include parameters common to all websites
    include bx/conf/bitrix.conf;
{% else %}
    # Include parameters common to all websites
    include bx/conf_fpm/bitrix.conf;
{% endif %}
}

server {
{% if nginx_version is version('1.25.1', '>=') %}
    listen {{ item.listen | default('443') }} default_server ssl;
    http2 on;
{% else %}
    listen {{ item.listen | default('443') }} http2 default_server ssl;
{% endif %}
{% if nginx_listen_ipv6 %}
    {% if nginx_version is version('1.25.1', '>=') %}
    listen [::]:{{ item.listen | default('443') }} default_server ssl;
    {% else %}
    listen [::]:{{ item.listen | default('443') }} http2 default_server ssl;
    {% endif %}
{% endif %}

{% if item.server_name is defined %}
    server_name {{ item.server_name }};
{% endif %}

{% if item.access_log is defined %}
    access_log {{ item.access_log | default('/var/log/nginx/{{ item.server_name.split(' ')[0]}}.log main') }};
{% endif %}
{% if item.error_log is defined %}
    error_log {{ item.error_log | default('/var/log/nginx/{{ item.server_name.split(' ')[0]}}.log warn') }};
{% endif %}

    # Enable SSL connection
    include	bx/conf/ssl.conf;
    server_name_in_redirect	off;

{% if item.httpd is true %}
    proxy_set_header    X-Forwarded-For    $proxy_add_x_forwarded_for;
    proxy_set_header    X-Real-IP          $remote_addr;
    proxy_set_header    Host               $host:443;
    proxy_set_header    X-Forwarded-Host   $host;
    proxy_set_header    X-Forwarded-Scheme $scheme;
    proxy_set_header    X-Forwarded-Proto  https;
    proxy_set_header    X-Forwarded-Port   $server_port;
    proxy_set_header	HTTPS              YES;
    
    # This rule removes the port number from HTTP/HTTPS redirects.
    proxy_redirect ~^(http://[^:]+):\d+(/.+)$ $1$2;
    proxy_redirect ~^(https://[^:]+):\d+(/.+)$ $1$2;

    set $proxyserver	"http://127.0.0.1:8888";

    proxy_ignore_client_abort off;
{% else %}
    fastcgi_ignore_client_abort off;

    set $php_sock  unix:/run/php/php-fpm{{ item.php_fpm_version | default('')}}.sock;
{% endif %}

{% if item.root is defined %}
    set $docroot {{ item.root }};
    root {{ item.root }};
{% else %}
    set $docroot		"/home/bitrix/ext_www/{{ item.server_name.split(' ')[0]}}";
    root /home/bitrix/ext_www/{{ item.server_name.split(' ')[0]}};
{% endif %}
    index {{ item.index | default('index.php index.html index.htm') }};

{% if item.extra_parameters is defined %}
    {{ item.extra_parameters|indent(4) }}
{% endif %}

    # custom options for sites; doesn't changes on update
    include bx/site_settings/default/*.conf;

{% if item.httpd is true %}
    # Include parameters common to all websites
    include bx/conf/bitrix.conf;
{% else %}
    # Include parameters common to all websites
    include bx/conf_fpm/bitrix.conf;
{% endif %}
}
